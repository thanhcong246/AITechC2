<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="185dp"
    android:layout_marginLeft="15dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="15dp"
    android:background="@color/white"
    android:outlineSpotShadowColor="@android:color/darker_gray"
    app:cardCornerRadius="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:background="?colorOnPrimary"
            android:orientation="horizontal"

            android:weightSum="10">


            <com.airbnb.lottie.LottieAnimationView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/course_imageview_id"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="3"
                android:padding="10dp"
                android:scaleX="1.5"
                android:scaleY="1.5"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/weather_icon_mostly_sunny" />


            <TextView
                android:id="@+id/city_name_text_id"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical|start"
                android:layout_marginLeft="5dp"
                android:layout_weight="4.5"
                android:fontFamily="@font/poppins_medium"
                android:gravity="center_vertical|start"
                android:maxLines="1"
                android:text="Thành Phố"
                android:textColor="@android:color/darker_gray"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/temperature_id"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_weight="2.5"
                android:fontFamily="@font/poppins_medium"
                android:gravity="center"
                android:scaleX="1.3"
                android:scaleY="1.3"
                android:text="15 C"
                android:textColor="#ffe33a"
                android:textSize="20dp"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:background="?colorOnPrimary"
            android:orientation="horizontal"

            android:weightSum="10">


            <TextView
                android:id="@+id/wind_speed_id"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_weight="3.33"
                android:fontFamily="@font/poppins_medium"
                android:gravity="center"
                android:maxLines="1"
                android:text="Gió"
                android:textColor="@android:color/darker_gray"
                android:textSize="14dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/wind_dir_id"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_weight="3.33"
                android:fontFamily="@font/poppins_medium"
                android:gravity="center"
                android:maxLines="1"
                android:text="Hướng"
                android:textColor="@android:color/darker_gray"
                android:textSize="14dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/wind_humidity_id"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_weight="3.33"
                android:fontFamily="@font/poppins_medium"
                android:gravity="center"
                android:maxLines="1"
                android:text="Độ ẩm"
                android:textColor="@android:color/darker_gray"
                android:textSize="14dp"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:id="@+id/date_id"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_vertical|start"
            android:layout_marginLeft="25dp"
            android:layout_weight="1.5"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center_vertical|start"
            android:maxLines="1"
            android:text="29/4/2023 "
            android:textColor="#FF0000"
            android:textSize="18dp"
            android:textStyle="bold" />
    </LinearLayout>


</androidx.cardview.widget.CardView>